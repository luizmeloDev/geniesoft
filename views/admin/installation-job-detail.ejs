<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <title><%= title %> - Admin Panel</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
    <link href="/css/responsive-admin.css" rel="stylesheet">
    <!-- Admin Mobile Optimizations -->
    <link href="/css/admin-mobile.css" rel="stylesheet">
</head>
<body>
<div class="container-fluid">
    <div class="row">
        <!-- Include Admin Responsive Sidebar -->
        <%- include('../partials/admin-responsive-sidebar', { page: 'installations', settings: settings }) %>
        
        <main class="col-md-10 ms-sm-auto main-content">
            <!-- Header -->
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">
                    <i class="bi bi-tools me-2"></i>Detail Job Instalasi
                </h1>
                <div class="btn-toolbar mb-2 mb-md-0">
                    <div class="btn-group me-2">
                        <a href="/admin/installations" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Kembali
                        </a>
                        <a href="/admin/installations/edit/<%= job.id %>" class="btn btn-primary">
                            <i class="bi bi-pencil me-2"></i>Edit
                        </a>
                    </div>
                </div>
            </div>

            <!-- Job Header -->
            <div class="job-header">
                <div class="row align-items-center">
                    <div class="col-md-8">
                        <h2 class="mb-2"><i class="bi bi-tools me-2"></i><%= job.job_number || 'N/A' %></h2>
                        <p class="mb-1"><i class="bi bi-person me-2"></i><%= job.customer_name || 'N/A' %></p>
                        <p class="mb-0"><i class="bi bi-geo-alt me-2"></i><%= job.customer_address || 'Alamat tidak tersedia' %></p>
                    </div>
                    <div class="col-md-4 text-end">
                        <span class="badge status-badge bg-<%= job.status %>">
                            <%= job.status %>
                        </span>
                    </div>
                </div>
            </div>

            <div class="row">
                <!-- Main Content -->
                <div class="col-md-8">
                    <!-- Customer Information -->
                    <div class="card detail-card">
                        <div class="card-header">
                            <h5 class="mb-0"><i class="bi bi-person-circle me-2"></i>Informasi Pelanggan</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="detail-section">
                                        <strong>Nama Pelanggan:</strong><br>
                                        <%= job.customer_name || 'N/A' %>
                                    </div>
                                    <div class="detail-section">
                                        <strong>Nomor Telepon:</strong><br>
                                        <a href="tel:<%= job.customer_phone || '' %>"><i class="bi bi-telephone me-1"></i><%= job.customer_phone || 'N/A' %></a>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="detail-section">
                                        <strong>Alamat:</strong><br>
                                        <%= job.customer_address || 'Alamat tidak tersedia' %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Installation Details -->
                    <div class="card detail-card">
                        <div class="card-header">
                            <h5 class="mb-0"><i class="bi bi-tools me-2"></i>Detail Instalasi</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="detail-section">
                                        <strong>Paket Internet:</strong><br>
                                        <%= job.package_name || 'N/A' %>
                                    </div>
                                    <div class="detail-section">
                                        <strong>Tanggal Instalasi:</strong><br>
                                        <%= job.installation_date ? new Date(job.installation_date).toLocaleDateString('id-ID') : 'TBD' %>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="detail-section">
                                        <strong>Waktu Instalasi:</strong><br>
                                        <%= job.installation_time || 'Waktu tidak ditentukan' %>
                                    </div>
                                </div>
                            </div>
                            <% if (job.notes) { %>
                                <div class="detail-section">
                                    <strong>Catatan:</strong><br>
                                    <%= job.notes %>
                                </div>
                            <% } %>
                        </div>
                    </div>

                    <!-- Technician Assignment -->
                    <div class="card detail-card">
                        <div class="card-header">
                            <h5 class="mb-0"><i class="bi bi-person-workspace me-2"></i>Penugasan Teknisi</h5>
                        </div>
                        <div class="card-body">
                            <% if (job.assigned_technician_id) { %>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="detail-section">
                                            <strong>Teknisi:</strong><br>
                                            <%= job.technician_name || 'N/A' %>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="detail-section">
                                            <strong>Status Penugasan:</strong><br>
                                            <span class="badge bg-info">Ditugaskan</span>
                                        </div>
                                    </div>
                                </div>
                            <% } else { %>
                                <div class="text-center py-4">
                                    <h6 class="text-muted">Belum ada teknisi yang ditugaskan</h6>
                                </div>
                            <% } %>
                        </div>
                    </div>

                    <!-- Status History -->
                    <div class="card detail-card">
                        <div class="card-header">
                            <h5 class="mb-0"><i class="bi bi-clock-history me-2"></i>Riwayat Status</h5>
                        </div>
                        <div class="card-body">
                            <% if (statusHistory && statusHistory.length > 0) { %>
                                <% statusHistory.forEach(history => { %>
                                    <div class="history-item">
                                        <strong>Status berubah dari <%= history.old_status %> ke <%= history.new_status %></strong><br>
                                        <small class="text-muted"><%= new Date(history.created_at).toLocaleString('id-ID') %></small>
                                    </div>
                                <% }); %>
                            <% } else { %>
                                <p>Belum ada riwayat status</p>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>