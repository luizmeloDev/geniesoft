<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <title>Dashboard Billing - Admin</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
    <link href="/css/responsive-admin.css" rel="stylesheet">
    <link href="/css/admin-mobile.css" rel="stylesheet">
</head>
<body>
    <%- include('../../partials/admin-responsive-sidebar', { page: 'billing-dashboard', settings: settings }) %>
    <div class="main-content">
        <%- include('../../partials/admin-mobile-navbar', { pageTitle: 'Dashboard Billing' }) %>
        <main class="container-fluid">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">Dashboard Billing</h1>
            </div>

            <!-- Stat Cards -->
            <div class="row">
                <div class="col-lg-3 col-md-6">
                    <div class="card text-bg-light">
                        <div class="card-body">
                            <h5>Total Pelanggan</h5>
                            <h3 class="text-primary"><%= stats.total_customers || 0 %></h3>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="card text-bg-light">
                        <div class="card-body">
                            <h5>Pendapatan Bulanan</h5>
                            <h3 class="text-success">Rp <%= (stats.monthly_revenue || 0).toLocaleString('id-ID') %></h3>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="card text-bg-light">
                        <div class="card-body">
                            <h5>Tagihan Belum Dibayar</h5>
                            <h3 class="text-danger"><%= stats.unpaid_invoices || 0 %></h3>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="card text-bg-light">
                        <div class="card-body">
                            <h5>Pendapatan Voucher</h5>
                            <h3 class="text-info">Rp <%= (stats.voucher_revenue || 0).toLocaleString('id-ID') %></h3>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Charts and Tables -->
            <div class="row">
                <div class="col-lg-4">
                    <div class="card">
                        <div class="card-header">Status Tagihan Bulanan</div>
                        <div class="card-body d-flex justify-content-center">
                            <canvas id="monthlyInvoiceChart"></canvas>
                        </div>
                    </div>
                </div>
                <div class="col-lg-8">
                    <div class="card">
                        <div class="card-header">Tagihan Terbaru</div>
                        <div class="card-body p-0">
                            <div class="table-responsive">
                                <table class="table table-hover mb-0">
                                    <thead>
                                        <tr>
                                            <th>No. Tagihan</th>
                                            <th>Pelanggan</th>
                                            <th>Jumlah</th>
                                            <th>Status</th>
                                            <th>Jatuh Tempo</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <!-- Recent invoice data -->
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const monthlyCtx = document.getElementById('monthlyInvoiceChart');
            if (monthlyCtx) {
                const monthlyInvoiceData = <%- JSON.stringify([
                    (stats.paid_monthly_invoices || 0),
                    (stats.unpaid_monthly_invoices || 0)
                ], null, '') %>;

                new Chart(monthlyCtx, {
                    type: 'doughnut',
                    data: {
                        labels: ['Lunas', 'Belum Lunas'],
                        datasets: [{
                            label: 'Tagihan Bulanan',
                            data: monthlyInvoiceData,
                            backgroundColor: ['#198754', '#ffc107'],
                        }]
                    }
                });
            }
        });
    </script>
</body>
</html>
