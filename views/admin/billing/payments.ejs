
<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Transações do Coletor - Geniesoft</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet">
    <link href="/css/admin-mobile.css" rel="stylesheet">
</head>
<body>
<% 
  var filters = (typeof filters !== 'undefined') ? filters : { from: '', to: '', collector_id: '', status: '', q: '' };
  var payments = (typeof payments !== 'undefined') ? payments : [];
  var collectors = (typeof collectors !== 'undefined') ? collectors : [];
%>
<div class="container-fluid">
    <div class="row">
        <%- include('../../partials/billing-sidebar') %>
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 main-content py-4">
    <h3 class="mb-3">Transações do Coletor</h3>

    <form class="row g-2 align-items-end mb-3">
        <div class="col-auto">
            <label class="form-label">De</label>
            <input type="date" class="form-control" name="from" value="<%= filters.from %>">
        </div>
        <div class="col-auto">
            <label class="form-label">Até</label>
            <input type="date" class="form-control" name="to" value="<%= filters.to %>">
        </div>
        <div class="col-auto">
            <label class="form-label">Coletor</label>
            <select class="form-select" name="collector_id">
                <option value="">Todos</option>
                <% (collectors||[]).forEach(function(col){ %>
                    <option value="<%= col.id %>" <%= String(filters.collector_id)===String(col.id)?'selected':'' %>><%= col.name %></option>
                <% }) %>
            </select>
        </div>
        <div class="col-auto">
            <label class="form-label">Status</label>
            <select class="form-select" name="status">
                <option value="">Todos</option>
                <option value="completed" <%= filters.status==='completed'?'selected':'' %>>Concluído</option>
                <option value="received" <%= filters.status==='received'?'selected':'' %>>Repassado</option>
            </select>
        </div>
        <div class="col-auto">
            <label class="form-label">Buscar</label>
            <input type="text" class="form-control" name="q" value="<%= filters.q %>" placeholder="Nome/Nº/Notas">
        </div>
        <div class="col-auto">
            <button class="btn btn-primary">Aplicar</button>
            <button class="btn btn-outline-secondary" type="button" id="exportPayments">Exportar CSV</button>
        </div>
    </form>

    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
            <tr>
                <th>Data</th>
                <th>Coletor</th>
                <th>Cliente</th>
                <th>Valor</th>
                <th>Comissão</th>
                <th>Método</th>
                <th>Status</th>
                <th>Repasse</th>
                <th>Notas</th>
            </tr>
            </thead>
            <tbody>
            <% (payments||[]).forEach(function(p){ %>
                <tr>
                    <td><%= p.collected_at %></td>
                    <td><%= p.collector_name %></td>
                    <td><%= p.customer_name %> <small class="text-muted d-block"><%= p.customer_phone || '' %></small></td>
                    <td>R$ <%= Number(p.payment_amount||p.amount||0).toLocaleString('pt-BR') %></td>
                    <td>R$ <%= Number(p.commission_amount||0).toLocaleString('pt-BR') %></td>
                    <td><%= p.payment_method %></td>
                    <td><span class="badge bg-<%= p.status==='completed'?'success':'secondary' %>"><%= p.status === 'completed' ? 'Concluído' : (p.status || 'Pendente') %></span></td>
                    <td><span class="badge bg-<%= (p.remittance_status==='received' || !p.collector_id)?'primary':'warning' %>"><%= (p.remittance_status && p.collector_id) ? (p.remittance_status === 'received' ? 'Recebido' : 'Pendente') : (!p.collector_id ? 'N/A (Admin)' : 'Pendente') %></span></td>
                    <td><%= p.notes || '' %></td>
                </tr>
            <% }) %>
            </tbody>
        </table>
    </div>
    </div>
</div>

<script>
        // Export payments to CSV
        document.getElementById('exportPayments').addEventListener('click', function(){
            const headers = ['Data', 'Coletor', 'Cliente', 'Telefone', 'Valor', 'Comissão', 'Método', 'Status', 'Repasse', 'Notas'];
            const paymentsData = <%- JSON.stringify(payments||[]) %>;
            const rows = paymentsData.map(p=>[
                p.payment_date,
                p.collector_name,
                p.customer_name,
                p.customer_phone||'',
                p.payment_amount||p.amount||0,
                p.commission_amount||0,
                p.payment_method,
                p.status,
                p.remittance_status||'pendente',
                String(p.notes||'').replace(/\n/g,' ')
            ]);
            const csv = [headers].concat(rows).map(r=>r.map(x=>`"${String(x).replace(/"/g,'""')}"`).join(',')).join('\n');
            const blob = new Blob([csv], {type:'text/csv;charset=utf-8;'});
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url; a.download = 'pagamentos.csv'; a.click();
            URL.revokeObjectURL(url);
        });

        // Show technician navigation if accessed by technician
        document.addEventListener('DOMContentLoaded', function() {
            const isTechnicianView = window.location.pathname.includes('/technician/') ||
                                   document.body.classList.contains('technician-view');

            if (isTechnicianView) {
                // Hide admin nav and show technician nav
                const adminNav = document.querySelector('.bottom-nav');
                const technicianNav = document.getElementById('technicianNav');

                if (adminNav) adminNav.style.display = 'none';
                if (technicianNav) technicianNav.style.display = 'block';
            }
        });
    </script>

    <!-- Mobile Bottom Navbar -->
    <%- include('../../partials/admin-mobile-navbar', { currentPage: 'payments' }) %>
</body>
</html>
