
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <title><%= job ? 'Editar Agendamento' : 'Criar Nova Instalação' %> - Painel Admin</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
    <link href="/css/responsive-admin.css" rel="stylesheet">
    <link href="/css/admin-mobile.css" rel="stylesheet">
    <style>
        .customer-search-result { max-height: 200px; overflow-y: auto; }
        .customer-search-result .list-group-item-action { cursor: pointer; }
    </style>
</head>
<body>
<div class="container-fluid">
    <div class="row">
        <%- include('../partials/admin-responsive-sidebar', { page: 'installations', settings: settings }) %>
        
        <main class="col-md-10 ms-sm-auto main-content">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">
                    <i class="bi bi-plus-circle me-2"></i><%= job ? 'Editar Agendamento' : 'Criar Nova Instalação' %>
                </h1>
                <div class="btn-toolbar mb-2 mb-md-0">
                    <div class="btn-group me-2">
                        <a href="/admin/installations" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Voltar para a Lista
                        </a>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-8">
                    <div class="card form-card">
                        <div class="card-body">
                            <form id="installationForm">

                                <div class="form-section">
                                    <h5><i class="bi bi-person me-2"></i>Informações do Cliente</h5>
                                    <div class="row mb-3">
                                        <div class="col-md-8">
                                            <label for="customerSearch" class="form-label">Buscar Cliente Existente</label>
                                            <div class="input-group">
                                                <input type="text" class="form-control" id="customerSearch" placeholder="Digite nome, telefone ou usuário">
                                                <button class="btn btn-outline-secondary" type="button" id="searchCustomerBtn"><i class="bi bi-search"></i></button>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <label class="form-label">&nbsp;</label>
                                            <div class="d-grid">
                                                <button type="button" class="btn btn-outline-primary" id="newCustomerBtn"><i class="bi bi-person-plus me-2"></i>Novo Cliente</button>
                                            </div>
                                        </div>
                                    </div>
                                    <div id="customerSearchResult" class="customer-search-result mb-3"></div>
                                    <input type="hidden" name="customer_id" id="customer_id">
                                    <div id="newCustomerForm" style="display: none;">
                                        <div class="alert alert-info">Preencha os dados para criar um novo cliente junto com o agendamento.</div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <label for="newCustomerName" class="form-label">Nome do Cliente *</label>
                                                <input type="text" class="form-control" id="newCustomerName" name="newCustomerName">
                                            </div>
                                            <div class="col-md-6">
                                                <label for="newCustomerPhone" class="form-label">Número de Telefone *</label>
                                                <input type="tel" class="form-control" id="newCustomerPhone" name="newCustomerPhone">
                                            </div>
                                        </div>
                                        <div class="row mt-3">
                                            <div class="col-md-12">
                                                <label for="newCustomerAddress" class="form-label">Endereço *</label>
                                                <textarea class="form-control" id="newCustomerAddress" name="newCustomerAddress" rows="2"></textarea>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-section">
                                    <h5><i class="bi bi-box me-2"></i>Seleção de Plano</h5>
                                    <div class="row mb-3">
                                        <div class="col-md-12">
                                            <label for="package_id" class="form-label">Plano de Internet *</label>
                                            <select class="form-select" id="package_id" name="package_id" required>
                                                <option value="">Selecione o Plano</option>
                                                <% if (Array.isArray(packages)) { %>
                                                    <% packages.forEach(p => { %>
                                                        <option value="<%= p.id %>"><%= p.name %> - <%= p.speed %> - R$ <%= Number(p.price).toLocaleString('pt-BR') %></option>
                                                    <% }) %>
                                                <% } %>
                                            </select>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-section">
                                    <h5><i class="bi bi-calendar-event me-2"></i>Detalhes da Instalação</h5>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label for="installation_date" class="form-label">Data da Instalação</label>
                                            <input type="date" class="form-control" id="installation_date" name="installation_date">
                                        </div>
                                        <div class="col-md-6">
                                            <label for="installation_time" class="form-label">Hora da Instalação</label>
                                            <input type="time" class="form-control" id="installation_time" name="installation_time">
                                        </div>
                                    </div>
                                    <div class="row mt-3">
                                        <div class="col-md-6">
                                            <label for="assignedTechnician" class="form-label">Atribuir Técnico</label>
                                            <select class="form-select" id="assignedTechnician" name="assigned_technician_id">
                                                <option value="">Selecione o Técnico</option>
                                                <% if (typeof technicians !== 'undefined' && technicians.length > 0) { %>
                                                    <% technicians.forEach(tech => { %>
                                                        <option value="<%= tech.id %>"><%= tech.name %> (<%= tech.phone %>)</option>
                                                    <% }); %>
                                                <% } %>
                                            </select>
                                        </div>
                                        <div class="col-md-6">
                                            <label for="priority" class="form-label">Prioridade</label>
                                            <select class="form-select" id="priority" name="priority">
                                                <option value="normal">Normal</option>
                                                <option value="high">Alta</option>
                                                <option value="urgent">Urgente</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-section">
                                    <h5><i class="bi bi-info-circle me-2"></i>Informações Adicionais</h5>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <label for="notes" class="form-label">Observações</label>
                                            <textarea class="form-control" id="notes" name="notes" rows="3" placeholder="Observações adicionais sobre a instalação"></textarea>
                                        </div>
                                    </div>
                                </div>

                                <div class="d-flex justify-content-between mt-4">
                                    <button type="button" class="btn btn-outline-secondary" id="resetFormBtn"><i class="bi bi-arrow-clockwise me-2"></i>Limpar</button>
                                    <button type="submit" class="btn btn-primary"><i class="bi bi-check-circle me-2"></i>Criar Agendamento</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', () => {
        const newCustomerBtn = document.getElementById('newCustomerBtn');
        const searchCustomerBtn = document.getElementById('searchCustomerBtn');
        const customerSearchInput = document.getElementById('customerSearch');
        const newCustomerForm = document.getElementById('newCustomerForm');
        const customerSearchResult = document.getElementById('customerSearchResult');
        const customerIdInput = document.getElementById('customer_id');
        const installationForm = document.getElementById('installationForm');
        const resetFormBtn = document.getElementById('resetFormBtn');

        // Botão Novo Cliente
        newCustomerBtn.addEventListener('click', () => {
            newCustomerForm.style.display = 'block';
            customerSearchResult.innerHTML = '';
            customerIdInput.value = '';
            customerSearchInput.value = '';
            customerSearchInput.disabled = true;
            searchCustomerBtn.disabled = true;
        });

        // Botão de busca
        searchCustomerBtn.addEventListener('click', searchCustomer);
        customerSearchInput.addEventListener('keypress', (e) => {
            if (e.key === 'Enter') {
                e.preventDefault();
                searchCustomer();
            }
        });

        // Função de busca
        async function searchCustomer() {
            const query = customerSearchInput.value;
            if (query.length < 2) {
                customerSearchResult.innerHTML = '<div class="alert alert-warning">Digite pelo menos 2 caracteres.</div>';
                return;
            }

            try {
                const response = await fetch(`/search/customers?q=${encodeURIComponent(query)}`);
                if (!response.ok) throw new Error('A resposta da rede não foi boa.');
                
                const customers = await response.json();
                
                if (customers.length === 0) {
                    customerSearchResult.innerHTML = '<div class="alert alert-secondary">Nenhum cliente encontrado.</div>';
                    return;
                }

                const list = document.createElement('ul');
                list.className = 'list-group';
                customers.forEach(customer => {
                    const item = document.createElement('li');
                    item.className = 'list-group-item list-group-item-action';
                    item.textContent = `${customer.name} (${customer.phone || 'Sem telefone'})`;
                    item.onclick = () => selectCustomer(customer);
                    list.appendChild(item);
                });
                customerSearchResult.innerHTML = '';
                customerSearchResult.appendChild(list);

            } catch (error) {
                console.error('Erro ao buscar cliente:', error);
                customerSearchResult.innerHTML = '<div class="alert alert-danger">Falha ao buscar clientes.</div>';
            }
        }

        // Função para selecionar cliente
        function selectCustomer(customer) {
            customerSearchInput.value = customer.name;
            customerIdInput.value = customer.id;
            customerSearchResult.innerHTML = '';
            newCustomerForm.style.display = 'none';
        }

        // Botão de Limpar
        resetFormBtn.addEventListener('click', () => {
            installationForm.reset();
            newCustomerForm.style.display = 'none';
            customerSearchResult.innerHTML = '';
            customerIdInput.value = '';
            customerSearchInput.disabled = false;
            searchCustomerBtn.disabled = false;
        });

        // Handler do submit
        installationForm.addEventListener('submit', async (e) => {
            e.preventDefault();
            
            const form = e.target;
            const formData = new FormData(form);
            const data = Object.fromEntries(formData.entries());

            // Validação
            if (!data.customer_id && (!data.newCustomerName || !data.newCustomerPhone)) {
                alert('Por favor, selecione um cliente existente ou preencha os dados do novo cliente.');
                return;
            }
            if (!data.package_id) {
                alert('Por favor, selecione um plano de internet.');
                return;
            }

            try {
                const response = await fetch('/admin/installations/create', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });

                const result = await response.json();

                if (result.success) {
                    alert(result.message);
                    window.location.href = '/admin/installations';
                } else {
                    alert('Erro: ' + (result.message || 'Ocorreu uma falha.'));
                }
            } catch (error) {
                console.error('Erro ao enviar formulário:', error);
                alert('Ocorreu um erro de comunicação com o servidor.');
            }
        });
    });
</script>
</body>
</html>
