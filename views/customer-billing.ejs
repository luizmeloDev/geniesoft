<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> | Portal Geniesoft</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
  <link href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/css/theme.css?v=1">
  <style>
    body { font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; }
    .navbar { backdrop-filter: blur(10px); }
    .card { border-radius: 16px; box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05); }
    .btn-back { background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border-radius: 50px; color: white; font-weight: 600; }
    .customer-info { border-radius: 16px; padding: 25px; margin-bottom: 25px; }
  </style>
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-light">
    <div class="container">
      <a class="navbar-brand" href="/customer/dashboard">
        <img src="/img/<%= settings.logo_filename || 'logo.png' %>" alt="Logo" height="40">
        Portal do Cliente
      </a>
      <div class="navbar-nav ms-auto">
        <a href="/customer/dashboard" class="btn btn-back"><i class="bi bi-arrow-left me-2"></i>Voltar ao Painel</a>
        <a href="/customer/logout" class="btn btn-outline-danger btn-sm ms-2"><i class="bi bi-box-arrow-right me-1"></i>Sair</a>
      </div>
    </div>
  </nav>

  <div class="container mt-4">
    <div class="customer-info">
      <div class="row align-items-center">
        <div class="col-md-8">
          <h4 class="mb-2"><i class="bi bi-person-circle me-2"></i><%= customer.name %></h4>
          <p class="mb-1"><i class="bi bi-phone me-2"></i><%= customer.phone %></p>
          <p class="mb-1"><i class="bi bi-person me-2"></i>Usuário: <%= customer.username %></p>
          <% if (customer.package_name) { %>
          <p class="mb-0"><i class="bi bi-wifi me-2"></i>Pacote: <%= customer.package_name %> - R$ <%= parseFloat(customer.package_price).toLocaleString('pt-BR') %></p>
          <% } %>
        </div>
        <div class="col-md-4 text-end">
          <div class="mb-2">
            <strong>Status do Pagamento:</strong>
            <% if (customer.payment_status === 'paid') { %><span class="badge bg-success">Pago</span><% } else if (customer.payment_status === 'unpaid') { %><span class="badge bg-warning">Pendente</span><% } else if (customer.payment_status === 'overdue') { %><span class="badge bg-danger">Atrasado</span><% } else { %><span class="badge bg-secondary">Sem Faturas</span><% } %>
          </div>
          <div><strong>Total de Faturas:</strong> <%= invoices.length %></div>
        </div>
      </div>
    </div>

    <div class="card">
      <div class="card-header bg-white">
        <h5 class="mb-0"><i class="bi bi-receipt me-2"></i>Histórico de Faturas</h5>
      </div>
      <div class="card-body">
        <% if (invoices && invoices.length > 0) { %>
          <div class="table-responsive">
            <table class="table table-hover" id="invoicesTable" style="width:100%">
              <thead>
                <tr>
                  <th>Nº da Fatura</th>
                  <th>Valor</th>
                  <th>Vencimento</th>
                  <th>Status</th>
                  <th>Data de Criação</th>
                  <th>Pacote</th>
                  <th>Ação</th>
                </tr>
              </thead>
              <tbody>
                <% invoices.forEach(function(invoice) { %>
                  <tr>
                    <td><span class="fw-bold"><%= invoice.invoice_number %></span></td>
                    <td><span class="fw-bold text-primary">R$ <%= parseFloat(invoice.amount).toLocaleString('pt-BR') %></span></td>
                    <td><span class="<%= new Date(invoice.due_date) < new Date() && invoice.status === 'unpaid' ? 'text-danger fw-bold' : '' %>"><%= new Date(invoice.due_date).toLocaleDateString('pt-BR') %></span></td>
                    <td>
                      <% if (invoice.status === 'paid') { %><span class="badge bg-success">Pago</span><% } else { %><span class="badge <%= new Date(invoice.due_date) < new Date() ? 'bg-danger' : 'bg-warning text-dark' %>"><%= new Date(invoice.due_date) < new Date() ? 'Atrasado' : 'Pendente' %></span><% } %>
                    </td>
                    <td><%= new Date(invoice.created_at).toLocaleDateString('pt-BR') %></td>
                    <td><span class="badge bg-info"><%= invoice.package_name %></span></td>
                    <td>
                      <% if (invoice.status === 'unpaid') { %>
                        <button class="btn btn-sm btn-primary pay-now-btn" data-invoice-id="<%= invoice.id %>" data-invoice-number="<%= invoice.invoice_number %>" data-amount="<%= invoice.amount %>">
                          <i class="bi bi-credit-card me-1"></i>Pagar Agora
                        </button>
                      <% } else { %><span class="text-success small"><i class="bi bi-check-circle me-1"></i>Pago</span><% } %>
                    </td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        <% } else { %>
          <div class="text-center py-4"><i class="bi bi-inbox display-1 text-muted"></i><h5 class="mt-3 text-muted">Nenhuma fatura encontrada.</h5></div>
        <% } %>
      </div>
    </div>
    <!-- Mais seções aqui -->
  </div>

  <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
  <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
  <script>
    $(document).ready(function() {
      $('#invoicesTable').DataTable({
        responsive: true,
        language: { url: 'https://cdn.datatables.net/plug-ins/1.13.6/i18n/pt-BR.json' },
        order: [[4, 'desc']],
        pageLength: 10
      });
    });
  </script>
</body>
</html>
