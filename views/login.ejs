<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login do Cliente | Portal Geniesoft</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
  <link rel="stylesheet" href="/css/style.css">
  <style>
    body {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    .login-container { min-height: 100vh; display: flex; align-items: center; justify-content: center; padding: 20px; }
    .login-card { background: rgba(255, 255, 255, 0.95); backdrop-filter: blur(10px); border: none; border-radius: 20px; box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1); max-width: 400px; width: 100%; }
    .login-header { background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; padding: 30px 20px; text-align: center; }
    .logo-container { margin: 0 auto 15px; animation: fadeInLogo 1s ease 0.2s forwards; opacity: 0; }
    .logo-container img { max-width: 150px; max-height: 150px; border-radius: 12px; animation: floating 3s ease-in-out infinite; }
    @keyframes fadeInLogo { to { opacity: 1; } }
    @keyframes floating { 0%, 100% { transform: translateY(0px); } 50% { transform: translateY(-10px); } }
    .form-container { padding: 30px 25px; }
    .btn-login { background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border: none; border-radius: 12px; padding: 15px; font-weight: 600; }
    .footer-text { font-size: 12px; margin-top: 20px; }
  </style>
</head>
<body>
  <div class="login-container">
    <nav class="navbar navbar-expand-lg navbar-light position-fixed top-0 start-0 w-100" style="z-index: 1000; background: rgba(255, 255, 255, 0.9); backdrop-filter: blur(10px);">
      <div class="container">
        <a class="navbar-brand" href="/">
          <img src="/img/<%= (settings && settings.logo_filename) ? settings.logo_filename : 'logo.png' %>" alt="Logo" height="30">
          Portal do Cliente
        </a>
      </div>
    </nav>
    
    <div class="login-card">
      <div class="login-header">
        <div class="logo-container">
          <img src="/img/<%= (settings && settings.logo_filename) ? settings.logo_filename : 'logo.svg' %>?ts=<%= Date.now() %>" alt="Logo">
        </div>
        <h4 class="mb-1 fw-bold">Portal do Cliente</h4>
        <p class="mb-0 opacity-75"><%= settings.company_header %></p>
      </div>
      <div class="form-container">
        <form id="loginForm">
          <div class="form-floating mb-3">
            <input type="text" class="form-control" id="phone" name="phone" placeholder="Seu número de celular" required autofocus>
            <label for="phone"><i class="bi bi-phone me-2"></i>Número de Celular</label>
          </div>
          <button type="submit" class="btn btn-primary btn-login w-100" id="loginBtn">
            <span class="btn-text"><i class="bi bi-box-arrow-in-right me-2"></i>Entrar</span>
            <span class="btn-loading" style="display:none;"><i class="bi bi-hourglass-split me-2"></i>Processando...</span>
          </button>
        </form>
        <div id="loginAlert" class="mt-3" style="display:none;"></div>
        <div class="text-center footer-text">
          <div class="mb-3">
            <h6 class="mb-2 text-muted">Quer ser um revendedor?</h6>
            <a href="/agent/login" class="btn btn-outline-success btn-sm"><i class="bi bi-person-plus me-2"></i>Cadastre-se como Revendedor</a>
          </div>
          <hr class="my-3">
          <p class="mb-2"><i class="bi bi-shield-check me-1"></i>Sistema de segurança garantido</p>
          <p class="mb-2"><i class="bi bi-telephone me-1"></i>Precisa de ajuda? Contate <%= settings.contact_phone || 'Admin' %></p>
          <p class="mb-0">&copy; <%= new Date().getFullYear() %> <%= typeof settings !== 'undefined' && settings.footer_info ? settings.footer_info : 'Geniesoft' %></p>
        </div>
      </div>
    </div>
  </div>

  <div id="toast-container" style="position: fixed; top: 20px; right: 20px; z-index: 9999;"></div>

  <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    function showToast(type, title, message) {
        const toastContainer = $('#toast-container');
        const toastHtml = `
            <div class="toast align-items-center text-white bg-${type === 'error' ? 'danger' : 'success'} border-0" role="alert" aria-live="assertive" aria-atomic="true">
                <div class="d-flex">
                    <div class="toast-body"><strong>${title}</strong>: ${message}</div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
            </div>`;
        const toast = new bootstrap.Toast(toastContainer.append(toastHtml).children().last()[0]);
        toast.show();
    }

    $('#loginForm').on('submit', function(e) {
        e.preventDefault();
        const phone = $('#phone').val();
        if (!phone) {
            showToast('error', 'Erro', 'O número de celular deve ser preenchido.');
            return;
        }

        const btn = $('#loginBtn');
        btn.prop('disabled', true).find('.btn-text').hide();
        btn.find('.btn-loading').show();

        $.ajax({
            url: '/customer/login',
            method: 'POST',
            data: { phone },
            success: function(response) {
                if (response.success) {
                    showToast('success', 'Sucesso', 'Login bem-sucedido! Redirecionando...');
                    setTimeout(() => { window.location.href = response.redirect || '/customer/dashboard'; }, 800);
                } else {
                    showToast('error', 'Falha no Login', response.message || 'Número de celular não cadastrado.');
                }
            },
            error: function(xhr) {
                const errorMsg = xhr.responseJSON?.message || 'Ocorreu um erro durante o login.';
                showToast('error', 'Erro', errorMsg);
            },
            complete: function() {
                btn.prop('disabled', false).find('.btn-text').show();
                btn.find('.btn-loading').hide();
            }
        });
    });
  </script>
</body>
</html>
